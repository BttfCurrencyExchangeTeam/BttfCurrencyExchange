<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/deposit_item_height">
    <ImageView
        android:id="@+id/deposit_image"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/purse_item_height"
        android:layout_height="@dimen/purse_item_height" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/deposit_image"
        android:layout_toEndOf="@+id/deposit_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp">

        <TextView
            android:id="@+id/deposit_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="Мой вклад 1 (22%)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/deposit_init_time"
            tools:text="Создан 11.11.2012"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/deposit_initial_value"
            tools:text="Первоначальный взнос: 1000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/deposit_current_value"
            tools:text="Текущая сумма вклада: 7000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/deposit_income"
            tools:text="Доход по вкладу: 70000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <include layout="@layout/divider"
        android:layout_width="match_parent" android:layout_height="1dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>