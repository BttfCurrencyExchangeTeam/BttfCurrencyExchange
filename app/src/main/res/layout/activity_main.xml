<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/panel_background_color">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="4dp"
        android:layout_alignParentTop="true"
        android:id="@+id/main_toolbar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <!--TextView
            android:id="@+id/main_activity_tv_year"
            tools:text="2015"
            android:layout_centerVertical="true"
            android:background="@drawable/et_background"
            android:textSize="@dimen/et_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/et_padding"
            android:textColor="@color/green"
            android:maxLength="4"
            android:ems="3"
            android:maxEms="3"/-->

        <!--TextView
            android:id="@+id/main_activity_tv_money"
            tools:text="$1000.00"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/et_background"
            android:textSize="@dimen/et_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/et_padding"
            android:textColor="@color/green" /-->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_toolbar_plutonium"

                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                tools:ignore="ContentDescription"/>
            <TextView
                android:text="plutonium"
                android:id="@+id/tv_toolbar_plutonium"
                android:textAppearance="?android:attr/textAppearanceInverse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_toolbar_plutonium"
                android:layout_toEndOf="@+id/iv_toolbar_plutonium"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_toolbar_fuel"
                android:src="@drawable/fuel"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                tools:ignore="ContentDescription"/>
            <TextView
                android:text="fuel"
                android:id="@+id/tv_toolbar_fuel"
                android:textAppearance="?android:attr/textAppearanceInverse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_toolbar_fuel"
                android:layout_toEndOf="@+id/iv_toolbar_fuel"/>
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/main_scroll_view"
                android:layout_alignParentTop="true"
                android:layout_above="@+id/main_buttons_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--include layout="@layout/main_content"/-->

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.tixon.backtothefutureexchange.ui.ControlPanelItem
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_activity_present_panel"/>

                    <!--include layout="@layout/purse_header_layout"/-->

                    <TextView

                        android:text="@string/activity_main_my_purse"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <include layout="@layout/divider" />

                    <include layout="@layout/purse_items_layout" />

                    <TextView
                        android:text="@string/activity_main_my_deposits"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <include layout="@layout/divider" />

                    <include layout="@layout/deposits_recycler_layout" />

                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_buttons_layout"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:gravity="bottom"
                android:layout_alignParentBottom="true">

                <Button
                    android:id="@+id/main_activity_button_exchange"
                    android:text="@string/activity_main_button_exchange"
                    android:background="@drawable/button_background"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/main_activity_button_travel"
                    android:text="@string/activity_main_button_travel"
                    android:background="@drawable/button_background"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </RelativeLayout>

    </FrameLayout>
</LinearLayout>