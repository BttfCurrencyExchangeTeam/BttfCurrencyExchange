<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:padding="4dp"
        android:background="@color/panel_background_color"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:id="@+id/main_activity_tv_year"
            tools:text="2015"
            android:layout_centerVertical="true"
            android:background="@drawable/et_background"
            android:textSize="@dimen/et_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/et_padding"
            android:textColor="@color/green"
            android:maxLength="4"
            android:ems="3"
            android:maxEms="3"/>

        <TextView
            android:id="@+id/main_activity_tv_money"
            tools:text="$1000.00"
           android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/et_background"
            android:textSize="@dimen/et_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/et_padding"
            android:textColor="@color/green" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/main_activity_iv_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:layout_alignParentBottom="true"
            android:gravity="bottom">

            <Button
                android:id="@+id/main_activity_button_exchange"
                android:text="Обменять валюту"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/main_activity_button_travel"
                android:text="Переместиться во времени"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
