<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:padding="4dp"
            android:layout_alignParentTop="true"
            android:id="@+id/main_toolbar"
            android:background="@color/panel_background_color"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <TextView
                android:id="@+id/main_activity_tv_year"
                tools:text="2015"
                android:layout_centerVertical="true"
                android:background="@drawable/et_background"
                android:textSize="@dimen/et_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/et_padding"
                android:textColor="@color/green"
                android:maxLength="4"
                android:ems="3"
                android:maxEms="3"/>

            <TextView
                android:id="@+id/main_activity_tv_money"
                tools:text="$1000.00"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/et_background"
                android:textSize="@dimen/et_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/et_padding"
                android:textColor="@color/green" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/main_scroll_view"
            android:layout_below="@+id/main_toolbar"
            android:layout_above="@+id/main_buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--include layout="@layout/main_content"/-->

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.tixon.backtothefutureexchange.ui.ControlPanelItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_activity_present_panel"/>

                <!--include layout="@layout/purse_header_layout"/-->

                <include layout="@layout/purse_items_layout"/>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_buttons_layout"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:gravity="bottom"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/main_activity_button_exchange"
                android:text="Обменять"
                android:background="@drawable/button_background"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/main_activity_button_travel"
                android:text="Переместиться"
                android:background="@drawable/button_background"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>