<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/click_field_background"
    android:layout_height="@dimen/deposit_add_item_height">

    <ImageView
        android:id="@+id/deposit_add_item_image"
        android:src="@drawable/ic_more"
        android:scaleType="center"
        android:layout_width="@dimen/deposit_add_item_height"
        android:layout_height="@dimen/deposit_add_item_height" />

    <TextView
        android:text="@string/deposit_add_text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/deposit_add_item_image"
        android:layout_toEndOf="@+id/deposit_add_item_image"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>