<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.tixon.backtothefutureexchange.ui.ControlPanelItem
        android:id="@+id/destination_time_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.tixon.backtothefutureexchange.ui.ControlPanelItem
        android:id="@+id/present_time_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.tixon.backtothefutureexchange.ui.ControlPanelItem
        android:id="@+id/last_time_departed_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/control_panel_button_travel"
        android:background="@drawable/button_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Переместиться во времени" />
</LinearLayout>