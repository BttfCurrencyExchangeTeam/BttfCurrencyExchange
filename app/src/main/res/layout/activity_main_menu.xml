<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.tixon.backtothefutureexchange.MainMenu">

    <ImageView
        android:id="@+id/iv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="@dimen/iv_name_margin_top"
        android:adjustViewBounds="true"
        android:src="@drawable/bttf_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/iv_car"
        android:layout_below="@+id/iv_name"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/new_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tv_menu_margin_vertical"
            android:layout_marginTop="@dimen/tv_menu_margin_vertical"
            android:text="@string/new_game"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/main_menu_color"
            android:textSize="@dimen/main_menu_text_size" />

        <TextView
            android:id="@+id/continue_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tv_menu_margin_vertical"
            android:layout_marginTop="@dimen/tv_menu_margin_vertical"
            android:text="@string/_continue"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/main_menu_color"
            android:textSize="@dimen/main_menu_text_size" />

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tv_menu_margin_vertical"
            android:layout_marginTop="@dimen/tv_menu_margin_vertical"
            android:text="@string/about"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/main_menu_color"
            android:textSize="@dimen/main_menu_text_size" />

        <TextView
            android:id="@+id/exit_"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_exit"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/main_menu_color"
            android:textSize="@dimen/main_menu_text_size" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:adjustViewBounds="true"
        android:src="@drawable/bttf_car" />

</RelativeLayout>
