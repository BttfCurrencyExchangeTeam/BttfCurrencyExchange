<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/purse_item_frame"
    android:layout_width="match_parent"
    android:layout_height="@dimen/purse_item_height">
    <ImageView
        android:id="@+id/purse_item_currency_image"
        android:scaleType="center"
        android:layout_width="@dimen/purse_item_height"
        android:layout_height="@dimen/purse_item_height" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/purse_item_currency_image"
        android:layout_toEndOf="@+id/purse_item_currency_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/purse_item_currency_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="Российский рубль"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/purse_item_text"
            tools:text="7000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <include layout="@layout/divider"
        android:layout_width="match_parent" android:layout_height="1dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>