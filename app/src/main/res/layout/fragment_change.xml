<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fragment_change_background">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_change_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="144dp"/>

        <TextView
            android:id="@+id/fragment_change_text_view"
            tools:text="1000"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <SeekBar
            android:id="@+id/fragment_change_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/fragment_change_button"
            android:text="обменять"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

